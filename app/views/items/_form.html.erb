<ul>
  <%= form_for @item do |f| %>
      <%= f.label :name, "Item Name" %>
        <%= f.text_field :name %>

      <%= f.label :condition %>
        <%= f.text_field :condition %>

        <%= f.label :quantity %>
          <%= f.text_field :quantity %>

          <%= f.label :photo_url %>
            <%= f.text_field :photo_url %>

      <%= f.submit %>
    <% end %>
</ul>
